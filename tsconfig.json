{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}
